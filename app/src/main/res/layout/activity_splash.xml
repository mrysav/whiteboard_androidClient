<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/whiteboardOrange"
    tools:context="com.umdcs4995.whiteboard.Activities.SplashActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whiteboard"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginTop="35dp"
        android:layout_centerVertical="false"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtHeader"
        android:textColor="@color/whiteboardBrightBlue"
        android:shadowColor="#FFFFFF"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="14"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/whiteboard_logo"
        android:layout_alignTop="@+id/txtHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txtWelcome"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="4995 Labratoies"
        android:textSize="28sp"
        android:textColor="#FFFFFF" />
</RelativeLayout>
